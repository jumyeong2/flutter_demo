import React, { useState } from 'react';
import { 
  Activity, 
  FileText, 
  MessageSquare, 
  CheckCircle2, 
  Menu, 
  X, 
  ChevronRight,
  BrainCircuit,
  BarChart3,
  Zap,
  LogOut,
  Download,
  Star,
  Users,
  AlertTriangle,
  Siren,
  ArrowLeft,
  Clock,
  ShieldCheck,
  Search,
  Scale, 
  ArrowRight, 
  FileSignature, 
  Shield, 
  Gavel, 
  Info,
  Mail // 메일 아이콘 추가
} from 'lucide-react';

// --- [Page 3] 공동창업자 합의 UX 컴포넌트 ---
const FounderAgreementUX = () => {
  // 초기 데이터: 공동창업자 계약 시나리오 (구체적 수치 제안 업데이트)
  const [items, setItems] = useState([
    {
      id: 1,
      category: "역할 및 책임 (R&R)",
      question: "각 창업자의 핵심 역할과 의사결정 권한은 어떻게 나눌까요?",
      description: "C-Level 직함과 최종 결정권이 있는 영역을 명확히 해야 합니다.",
      userA: "저는 CEO로서 경영, 투자 유치, 제품 기획 총괄을 맡고 싶습니다. 개발 관련 최종 결정권은 CTO에게 위임합니다.",
      userB: "저는 CTO로서 개발 전반을 맡되, 제품 기획 단계에서도 기술적 거부권(Veto)을 갖고 싶습니다.",
      consensus: "",
      status: "conflict",
      aiSuggestion: "시장 표준 R&R: 경영/자금은 CEO 전결(100%), 기술 스택은 CTO 전결(100%). 단, 제품 로드맵은 5:5 합의를 원칙으로 하되, 데드락(Deadlock) 발생 시 CEO가 최종 결정권(Casting Vote)을 행사하는 구조가 일반적입니다.",
      isAiLoading: false
    },
    {
      id: 2,
      category: "베스팅(Vesting) 기간",
      question: "지분을 온전히 자신의 것으로 만드는 데 몆 년이 걸리게 할까요?",
      description: "보통 창업 멤버의 근속을 유도하기 위해 설정합니다. (표준: 3~4년)",
      userA: "서로 믿는 사이니까 별도 기간 없이 바로 100% 인정하면 좋겠습니다.",
      userB: "혹시 모를 이탈을 대비해 4년 베스팅을 적용해야 안전할 것 같습니다.",
      consensus: "",
      status: "conflict",
      aiSuggestion: "VC 투자 표준: 총 4년(48개월) 베스팅. 최초 1년(Cliff) 근무 시 지분의 25%를 일괄 인정하고, 이후 3년간 매월 1/48(약 2.08%)씩 분할 귀속시키는 조건이 가장 보편적입니다.",
      isAiLoading: false
    },
    {
      id: 4,
      category: "이탈 시 지분 처리 (Bad Leaver)",
      question: "고의적 태만이나 배임으로 인한 퇴사 시 지분은 어떻게 할까요?",
      description: "Bad Leaver 발생 시 지분을 액면가로 회수할지 등에 대한 합의입니다.",
      userA: "징계 해고나 배임의 경우라면 액면가로 전량 회수해야 합니다.",
      userB: "동의합니다. 액면가 회수 조항 넣죠.",
      consensus: "",
      status: "conflict",
      aiSuggestion: "표준 계약 조항: Bad Leaver(횡령, 배임 등) 확정 시, 보유 지분 100%를 '액면가'로 강제 회수(Call Option). 단순 변심 등(Good Leaver)의 경우, 근속 기간에 비례해 베스팅된 지분은 인정하되 잔여 지분만 무상 회수합니다.",
      isAiLoading: false
    }
  ]);

  const [showFinalModal, setShowFinalModal] = useState(false);
  const [email, setEmail] = useState(""); // 이메일 입력 상태
  const [emailSent, setEmailSent] = useState(false); // 이메일 전송 완료 상태

  // 진행률 계산
  const resolvedCount = items.filter(i => i.status === "resolved").length;
  const progress = (resolvedCount / items.length) * 100;

  // User A 입력 핸들러
  const handleUserAChange = (id, value) => {
    setItems(prev => prev.map(item => {
      if (item.id === id) {
        const newStatus = value.trim() === item.userB.trim() ? "resolved" : "conflict";
        return { ...item, userA: value, status: newStatus };
      }
      return item;
    }));
  };

  // 합의안 입력 핸들러
  const handleConsensusChange = (id, value) => {
    setItems(prev => prev.map(item => item.id === id ? { ...item, consensus: value } : item));
  };

  // 합의 완료 처리
  const markAsResolved = (id) => {
    setItems(prev => prev.map(item => {
      if (item.id === id) {
        if (!item.consensus.trim()) {
          alert("계약 조항으로 들어갈 합의 내용을 입력해주세요.");
          return item;
        }
        return { ...item, status: "resolved" };
      }
      return item;
    }));
  };

  // AI 가이드 실행
  const triggerAI = (id) => {
    setItems(prev => prev.map(item => item.id === id ? { ...item, isAiLoading: true } : item));
    
    setTimeout(() => {
      setItems(prev => prev.map(item => {
        if (item.id === id) {
          return { 
            ...item, 
            consensus: item.aiSuggestion, // 미리 정의된 제안을 입력창에 반영
            isAiLoading: false 
          };
        }
        return item;
      }));
    }, 1200);
  };

  // 아이콘 매핑
  const getIcon = (category) => {
    if (category.includes("역할")) return <Users className="w-5 h-5" />;
    if (category.includes("베스팅")) return <Clock className="w-5 h-5" />;
    if (category.includes("클리프")) return <AlertTriangle className="w-5 h-5" />;
    if (category.includes("이탈")) return <Shield className="w-5 h-5" />;
    return <Scale className="w-5 h-5" />;
  };

  // 이메일 전송 핸들러
  const handleSendEmail = () => {
    if (!email.includes("@")) {
      alert("올바른 이메일 주소를 입력해주세요.");
      return;
    }
    // 실제 전송 로직은 여기에 구현 (API 호출 등)
    setTimeout(() => {
      setEmailSent(true);
    }, 500);
  };

  return (
    <div className="min-h-screen bg-slate-100 p-4 md:p-8 font-sans text-slate-800">
      <div className="max-w-5xl mx-auto">
        
        {/* 헤더 영역 */}
        <header className="mb-8 bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-2xl font-bold text-slate-900 flex items-center gap-3">
                <FileSignature className="w-8 h-8 text-indigo-600" />
                공동창업자 주주 간 계약(SHA) 조율
              </h1>
              <p className="text-slate-500 mt-2 text-sm">
                스타트업의 안전한 항해를 위해 민감한 주제(지분, 이탈 등)를 미리 합의하고 기록합니다.
              </p>
            </div>
            <div className="text-right">
              <div className="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1">Agreement Progress</div>
              <div className="text-3xl font-bold text-indigo-600">{Math.round(progress)}%</div>
            </div>
          </div>
          <div className="w-full bg-slate-100 rounded-full h-2 mt-4 overflow-hidden">
            <div className="bg-indigo-600 h-2 transition-all duration-700 ease-out" style={{ width: `${progress}%` }}></div>
          </div>
        </header>

        {/* 메인 리스트 */}
        <div className="space-y-8">
          {items.map((item) => (
            <div 
              key={item.id} 
              className={`bg-white rounded-xl shadow-sm border-2 transition-all duration-300 relative overflow-hidden ${
                item.status === 'conflict' ? 'border-amber-200' : 'border-indigo-100'
              }`}
            >
              {/* 상태 배지 (Floating) */}
              <div className={`absolute top-0 right-0 px-4 py-2 rounded-bl-xl text-xs font-bold flex items-center gap-2 ${
                 item.status === 'conflict' ? 'bg-amber-100 text-amber-700' : 'bg-indigo-100 text-indigo-700'
              }`}>
                {item.status === 'conflict' ? (
                  <>
                    <Scale className="w-3 h-3" /> 조율 필요
                  </>
                ) : (
                  <>
                    <Gavel className="w-3 h-3" /> 조항 확정
                  </>
                )}
              </div>

              <div className="p-6 md:p-8">
                {/* 질문 및 카테고리 */}
                <div className="mb-6 pr-20">
                  <div className="flex items-center gap-2 text-indigo-600 font-bold mb-2">
                    {getIcon(item.category)}
                    <span>{item.category}</span>
                  </div>
                  <h3 className="text-xl font-bold text-slate-800 mb-2">{item.question}</h3>
                  <div className="flex items-start gap-2 text-sm text-slate-500 bg-slate-50 p-3 rounded-lg">
                    <Info className="w-4 h-4 mt-0.5 shrink-0" />
                    {item.description}
                  </div>
                </div>

                {/* 의견 대립 섹션 */}
                <div className="grid md:grid-cols-2 gap-6 mb-8">
                  {/* 나 (User A) */}
                  <div className={`p-4 rounded-xl border ${item.status === 'resolved' ? 'bg-slate-50 border-slate-200' : 'bg-indigo-50/50 border-indigo-100'}`}>
                    <label className="block text-xs font-bold text-slate-400 mb-2 uppercase">User A (나)</label>
                    <textarea
                      value={item.userA}
                      onChange={(e) => handleUserAChange(item.id, e.target.value)}
                      className="w-full bg-transparent border-none resize-none outline-none text-slate-700 h-20 text-sm"
                      placeholder="본인의 입장을 작성하세요."
                      disabled={item.status === 'resolved'}
                    />
                  </div>

                  {/* 상대방 (User B) */}
                  <div className={`p-4 rounded-xl border ${item.status === 'resolved' ? 'bg-slate-50 border-slate-200' : 'bg-amber-50/30 border-amber-100'}`}>
                    <label className="block text-xs font-bold text-slate-400 mb-2 uppercase">User B (공동창업자)</label>
                    <div className="text-slate-700 text-sm h-20 overflow-y-auto leading-relaxed">
                      {item.userB}
                    </div>
                  </div>
                </div>

                {/* 합의 도출 영역 */}
                <div className={`relative rounded-xl transition-all duration-300 ${
                  item.status === 'conflict' ? 'bg-slate-50 p-6 border border-slate-200' : 'bg-indigo-50 p-6 border border-indigo-200'
                }`}>
                  {/* AI Suggestion Button (Only visible in conflict) */}
                  {item.status === 'conflict' && (
                    <div className="flex justify-between items-center mb-4">
                      <span className="text-sm font-bold text-slate-700">최종 합의안 (계약 조항)</span>
                      <button
                        onClick={() => triggerAI(item.id)}
                        disabled={item.isAiLoading}
                        className="flex items-center gap-2 text-xs bg-white border border-indigo-200 text-indigo-600 px-4 py-2 rounded-full shadow-sm hover:bg-indigo-50 transition-all font-semibold"
                      >
                        {item.isAiLoading ? (
                          <span className="animate-spin">⏳</span>
                        ) : (
                          <Scale className="w-3 h-3" />
                        )}
                        {item.isAiLoading ? '시장 표준 분석 중...' : '시장 표준(Standard) 제안받기'}
                      </button>
                    </div>
                  )}

                  <div className="flex gap-4 items-start">
                    <div className="flex-1">
                       <textarea
                        value={item.consensus}
                        onChange={(e) => handleConsensusChange(item.id, e.target.value)}
                        placeholder={item.status === 'conflict' ? "양측의 의견을 조율하여 최종 계약 문구를 작성하세요. (AI 제안 활용 가능)" : ""}
                        disabled={item.status === 'resolved'}
                        className={`w-full p-4 rounded-lg text-sm leading-relaxed resize-none h-24 outline-none transition-all font-medium ${
                          item.status === 'resolved' 
                            ? 'bg-transparent text-indigo-900' 
                            : 'bg-white border border-slate-300 focus:ring-2 focus:ring-indigo-200'
                        }`}
                      />
                    </div>
                    
                    <div className="flex flex-col gap-2 shrink-0">
                      {item.status === 'conflict' ? (
                        <button 
                          onClick={() => markAsResolved(item.id)}
                          className="h-24 px-6 bg-slate-900 text-white rounded-lg hover:bg-slate-800 transition-all shadow-lg hover:shadow-xl flex flex-col items-center justify-center gap-2 group"
                        >
                          <Gavel className="w-6 h-6 group-hover:scale-110 transition-transform" />
                          <span className="text-xs font-bold">조항<br/>확정</span>
                        </button>
                      ) : (
                        <button 
                          onClick={() => setItems(prev => prev.map(i => i.id === item.id ? {...i, status: 'conflict'} : i))}
                          className="h-24 px-6 bg-white border border-indigo-200 text-indigo-600 rounded-lg hover:bg-indigo-50 transition-all flex flex-col items-center justify-center gap-2"
                        >
                          <span className="text-xs font-bold">수정<br/>하기</span>
                        </button>
                      )}
                    </div>
                  </div>
                  
                  {item.status === 'resolved' && (
                    <div className="mt-3 flex items-center gap-2 text-xs text-indigo-600 font-medium">
                      <CheckCircle2 className="w-4 h-4" />
                      이 내용은 최종 계약서의 {item.id}조 항으로 반영됩니다.
                    </div>
                  )}
                </div>

              </div>
            </div>
          ))}
        </div>

        {/* Footer Action */}
        <div className="mt-12 pb-20 flex justify-end">
          <button
            onClick={() => setShowFinalModal(true)}
            disabled={progress < 100}
            className={`flex items-center gap-3 px-10 py-5 rounded-xl font-bold text-lg shadow-xl transition-all ${
              progress < 100 
                ? 'bg-slate-200 text-slate-400 cursor-not-allowed' 
                : 'bg-indigo-600 text-white hover:bg-indigo-700 hover:translate-y-[-2px]'
            }`}
          >
            {progress < 100 ? (
              <>조항이 모두 확정되지 않았습니다 ({Math.round(progress)}%)</>
            ) : (
              <>
                <FileSignature className="w-6 h-6" />
                합의서(Term Sheet) 생성
              </>
            )}
          </button>
        </div>

        {/* Modal (Updated) */}
        {showFinalModal && (
          <div className="fixed inset-0 bg-slate-900/60 flex items-center justify-center z-50 p-4 backdrop-blur-sm">
            <div className="bg-white rounded-xl shadow-2xl max-w-3xl w-full max-h-[85vh] overflow-y-auto">
              <div className="p-10">
                <div className="border-b pb-6 mb-6 text-center">
                  <div className="inline-flex items-center justify-center w-16 h-16 bg-indigo-50 text-indigo-600 rounded-full mb-4">
                    <Scale className="w-8 h-8" />
                  </div>
                  <h2 className="text-3xl font-serif font-bold text-slate-900">Co-Founder Agreement</h2>
                  {/* 면책조항 강조 */}
                  <p className="mt-4 text-amber-600 bg-amber-50 px-4 py-2 rounded-lg text-sm font-bold border border-amber-100 leading-relaxed">
                    "본 문서는 법적 효력이 없으며, 참고용입니다.<br/>정식 계약 전에는 반드시 전문 변호사 검토를 받으십시오."
                  </p>
                </div>

                {/* 조항 내용 제거됨 */}

                {/* 이메일 발송 컨테이너 */}
                <div className="mt-10 pt-8 border-t border-slate-100">
                  {!emailSent ? (
                    <div className="bg-slate-50 p-6 rounded-xl border border-slate-200">
                      <div className="flex flex-col gap-4">
                        <div className="flex items-center gap-2 mb-1">
                           <FileText className="text-slate-400" size={18} />
                           <h4 className="font-bold text-slate-700">합의서 PDF 받기</h4>
                        </div>
                        <div className="flex flex-col sm:flex-row gap-3">
                          <div className="flex-1">
                            <input 
                              type="email" 
                              placeholder="이메일 주소를 입력하세요 (example@company.com)" 
                              className="w-full h-12 px-4 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all"
                              value={email}
                              onChange={(e) => setEmail(e.target.value)}
                            />
                          </div>
                          <button 
                            className="h-12 px-8 bg-indigo-600 text-white font-bold rounded-lg hover:bg-indigo-700 shadow-lg flex items-center justify-center gap-2 transition-all whitespace-nowrap"
                            onClick={handleSendEmail}
                          >
                            <Mail size={18} />
                            PDF 보내기
                          </button>
                        </div>
                        <p className="text-xs text-slate-400 pl-1">
                          * 입력하신 이메일로 합의서 초안(PDF)과 변호사 검토 가이드가 발송됩니다.
                        </p>
                      </div>
                    </div>
                  ) : (
                    <div className="bg-green-50 p-8 rounded-xl border border-green-100 text-center animate-fade-in">
                        <div className="inline-flex items-center justify-center w-12 h-12 bg-green-100 text-green-600 rounded-full mb-3">
                           <CheckCircle2 size={24} />
                        </div>
                        <h4 className="text-lg font-bold text-green-800 mb-1">발송 완료!</h4>
                        <p className="text-green-700 mb-4">
                          <span className="font-bold">{email}</span>로<br/>합의서가 성공적으로 전송되었습니다.
                        </p>
                        <button 
                          onClick={() => { setShowFinalModal(false); setEmailSent(false); }}
                          className="text-sm font-bold text-slate-500 hover:text-slate-800 underline"
                        >
                          닫기
                        </button>
                    </div>
                  )}
                  
                  {!emailSent && (
                    <div className="mt-4 text-right">
                      <button 
                        onClick={() => setShowFinalModal(false)}
                        className="text-slate-400 hover:text-slate-600 font-medium text-sm underline"
                      >
                        닫기 (저장하지 않음)
                      </button>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        )}

      </div>
    </div>
  );
};

// --- 메인 App 컴포넌트 ---
const App = () => {
  // 화면 상태 관리 ('landing' | 'onboarding' | 'agreement')
  const [currentView, setCurrentView] = useState('landing');
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [demoStep, setDemoStep] = useState(0);

  // --- 온보딩 페이지 컴포넌트 ---
  const OnboardingPage = () => {
    return (
      <div className="min-h-screen bg-white font-sans text-gray-900 flex flex-col">
        {/* Header / Nav */}
        <nav className="w-full h-16 border-b border-gray-100 flex items-center px-4 bg-white sticky top-0 z-50">
          <button 
            onClick={() => setCurrentView('landing')}
            className="p-2 -ml-2 text-gray-600 hover:bg-gray-100 rounded-full transition"
          >
            <ArrowLeft size={24} />
          </button>
          <div className="ml-2 font-bold text-lg text-slate-900">Rulebook 체험</div>
        </nav>

        {/* Main Content */}
        <div className="flex-1 max-w-lg mx-auto w-full px-6 py-8 flex flex-col">
          
          {/* Title Section */}
          <div className="mb-10 text-center animate-fade-in-up">
            <h1 className="text-2xl font-bold text-slate-900 mb-3 leading-snug">
              Rulebook 체험 여정을<br/>시작해보세요!
            </h1>
            <p className="text-slate-500 text-sm leading-relaxed">
              간단한 3단계로 나의 협업 리스크와<br/>개선 가이드를 확인할 수 있어요.
            </p>
          </div>

          {/* Steps Timeline */}
          <div className="flex-1 space-y-0 mb-8 relative">
             {/* Vertical Connecting Line */}
             <div className="absolute left-[19px] top-4 bottom-10 w-0.5 bg-slate-100 -z-10"></div>

             {/* Step 1 */}
             <div className="flex gap-4 pb-8 relative group animate-fade-in-up" style={{ animationDelay: '0.1s' }}>
                <div className="flex flex-col items-center">
                   <div className="w-10 h-10 rounded-full bg-blue-600 text-white flex items-center justify-center font-bold shadow-lg ring-4 ring-white z-10">
                      1
                   </div>
                </div>
                <div className="pt-1">
                   <h3 className="text-lg font-bold text-blue-600 mb-1">3대 핵심 진단</h3>
                   <p className="text-sm text-slate-600 leading-snug">
                     돈(지분), 권력(의사결정), 이별(안전장치)에<br/>대해 핵심 질문을 던집니다.
                   </p>
                </div>
             </div>

             {/* Step 2 */}
