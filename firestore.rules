rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  
    // Allow public access to create leads, but only if they use their email as ID
    // We allow get (to check for duplicates) and write (create/update)
    match /leads/{email} {
      allow get, create, update: if true;
      allow list: if false; // Prevent dumping all emails
    }
  }
}
